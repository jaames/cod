@import 'nib'

*
  box-sizing border-box

html, body
  margin 0

body
  font-family sans-serif

example_width = 360px
base_width = example_width * 2

.bg
  position absolute
  z-index -1
  background-image url('cod.jpg')
  background-repeat no-repeat
  background-position 51% 0px
  background-size 400px
  width 100%
  height 100%
  top 0
  left 0
  opacity 0.8

p code, ul code
  font-family monospace
  font-size 80%
  // background #333
  padding 0 5px
  border-radius 2px
  // color white

center(width=base_width)
  max-width width
  margin auto

a[href], a[href]:visited
  color #1e1e1e
  border-bottom 1px solid #ccc
  text-decoration none

a[href]:hover
  color #000
  border-bottom 2px solid #000

header
  text-align center

  h1,h2,h3,h4,h5,h6
    font-weight normal
  h1, h2
    text-transform uppercase
  h2
    font-size 24px
  h5
    font-style italic
  hr
    border 0
    border-top 2px solid #1e1e1e
    width 200px

  .rule
    border-top 1px solid #1e1e1e
    margin 0
    margin-top -1px
    position relative
    top 19px
    span
      position relative
      top -19px
      background white
      padding 0 10px

.light
  opacity 0.65
  font-style italic

hr
  border 0
  border-top 1px solid #1e1e1e
  margin 50px 0

section.text
  center(620px)
  padding 20px
  header
    margin-top 40px
    margin-bottom 20px
    h1
      font-size 24px

.main
  font-family 'Old Standard TT', serif
  margin auto
  margin-top 165px
  margin-bottom 300px
  font-size 20px
  color #1E1E1E
  
  > header
    center(600px)

  .content
    
    section.main-example
      background-color #333
      width 100%
      padding 20px
      margin-top 40px
      
    margin 0
    // center(example_width * 2)
    font-family 'PT Serif'

    header
      font-family 'Old Standard TT'
      font-weight 400
      text-transform uppercase
    
    p
      text-align justify

    .examples
      center(example_width * 2)

      .example
        vertical-align top
        display inline-block
        color whitesmoke
        width example_width

      pre
        margin-top 15px
        padding 10px
        font-size 14px
        margin 0
        word-wrap break-word

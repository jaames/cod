{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "ES2020",
      "dom",
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "paths": {
      "*" : ["src/types/*"]
    },
    "typeRoots": [
      "./src/custom.d.ts",
      "node_modules/@types",
    ]
  }
}